    <script>
        $(document).ready(function () {
            setSelectedMenu();
            $('#clickmewow').click(function () {
                $('#radio1003').attr('checked', 'checked');
            });
        });

        $("#sm-menu").click(function () {
            $("#add-menu").toggleClass('in');
        });

        function setSelectedMenu() {
            $(".topmenuli").find("li.topmenuli.active").each(function () {
                $(this).removeClass("active");
            });
            switch ('@curController') {
                case '@Controllers.Dashboard':
                    setActiveLink($('#lnkMenuDashboard').attr('id'));
                    break;
                case '@Controllers.User':
                    setActiveLink($('#lnkMenuUser').attr('id'));
                    break;
                case '@Controllers.State':
                    setActiveLink($('#lnkMenuState').attr('id'));
                    break;
                case '@Controllers.District':
                    setActiveLink($('#lnkMenuState').attr('id'));
                    break;
                case '@Controllers.ProductType':
                    setActiveLink($('#lnkMenuProductType').attr('id'));
                    break;
                case '@Controllers.Products':
                    setActiveLink($('#lnkMenuProducts').attr('id'));
                    break;
                 case '@Controllers.ProductStockLedger':
                    setActiveLink($('#lnkMenuProducts').attr('id'));
                    break;
                @*case '@Controllers.SubScription':
                    setActiveLink($('#lnkMenuSubScription').attr('id'));
                    break;
                 case '@Controllers.Standard':
                    setActiveLink($('#lnkMenuStandard').attr('id'));
                    break;
                case '@Controllers.Subject':
                    setActiveLink($('#lnkMenuStandard').attr('id'));
                    break;
                case '@Controllers.ExamChapter':
                    setActiveLink($('#lnkMenuChapter').attr('id'));
                    break;
                case '@Controllers.ExamSubject':
                    setActiveLink($('#lnkMenuSubject').attr('id'));
                    break;
                case '@Controllers.Exam':
                    setActiveLink($('#lnkMenuExam').attr('id'));
                    break;
                case '@Controllers.ExamVSStandard':
                    setActiveLink($('#lnkMenuExamVSStandard').attr('id'));
                    break;
                case '@Controllers.ExamStandard':
                    setActiveLink($('#lnkMenuExamStandard').attr('id'));
                    break;
                case '@Controllers.ExamQuestion':
                    setActiveLink($('#lnkMenuExamQuestion').attr('id'));
                    break;*@
            }
        }

        function setActiveLink(menuId) {
            $(".topmenuli").find("a[id='" + menuId + "']").parent("li").addClass("active");
            $(".topmenuli").find("a[id='" + menuId + "']").parent("li").append("<span class='selected'></span>");
        };

        $('#commonModal').on('hide.bs.modal', function (e) {
            $("#commonModelTitle").html('');
            $("#commonModalBody").html('');
            $("#commonModalFooter").html('');
        });

        function isEmpty(val) {
            return (val === undefined || val == null || val.length <= 0) ? '' : val;
        }

          function loaderon() {
            document.getElementById("overlay").style.display = "block";
        }

        function loaderoff() {
            document.getElementById("overlay").style.display = "none";
        }
        function clearfilter() {
            window.location.reload();
        }
    </script>


